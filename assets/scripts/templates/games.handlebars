{{#each fullGameList as |game|}}
{{#if game.editable}}
  <section data-id="{{game.id}}">
    <h6>Title:
      {{game.title}}
    </h6>
    <h6>System:
      {{game.system}}
    </h6>
    <h6>How Many Players:
      {{game.player_count}}
    </h6>
    <h6>How Many Sessions:
      {{game.sessions_count}}
    </h6>
    <h6>Description:
      {{game.description}}
    </h6>
    <h6>Start Date:
      {{game.start_date}}
    </h6>
    {{/if}}
    {{#if game.editable}}
    <button type="submit" class="btn btn-danger delete-game">Remove</button>
    <button class="btnupdate btn btn-secondary" type='button'> Edit this Game </button>
    <form id="updateGame" class='hidden'>
      <h3>Update Game!</h3>
      <input type='text' class="form-control" name="game_list[title]" placeholder="Title" required/>
      <input type='text' class="form-control" name="game_list[system]" placeholder="System" required/>
      <input type='text' class="form-control" name="game_list[player_count]" placeholder="Player Count" required/>
      <input type='text' class="form-control" name="game_list[sessions_count]" placeholder="Sessions Count" required/>
      <input type='text' class="form-control" name="game_list[description]" placeholder="Description" required/>
      <input type='date' class="form-control" name="game_list[start_date]" placeholder="Start Date" required/>
      <button type="submit" class="update btn btn-info update-game">Submit Update</button>
    </form>
  </div>
</div>
    {{/if}}
  </section>
{{/each}}

